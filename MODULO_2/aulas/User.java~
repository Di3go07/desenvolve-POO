public class User {
	private String nome;
	private  int idade;
	public String  getNome() {
		return this.nome;	
	}
	public void setNome(String nome) {
		this.nome = nome;
	}
	public void setIdade(int idade) {
		if  (idade >= 18 && idade < 120) { 
			this.idade = idade;
		} else {
			System.out.println("Idade invÃ¡lida");
		       System.exit(0);
		}
	}
}
